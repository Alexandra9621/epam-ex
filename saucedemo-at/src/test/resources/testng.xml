<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Full Test Suite" parallel="false">

    <!-- Smoke Suite -->
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <packages>
            <package name="tests"/>
        </packages>
    </test>

    <!-- Regression Suite -->
    <test name="Regression Tests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <packages>
            <package name="tests"/>
        </packages>
    </test>

    <test name="TestRunner1">
        <classes>
            <class name="org.example.runner.TestRunner" />
        </classes>
    </test>
    <test name="TestRunner2">
        <classes>
            <class name="org.example.runner.TestRunner" />
        </classes>
    </test>

</suite>